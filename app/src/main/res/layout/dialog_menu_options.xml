<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show Bottom Nav"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hide Bottom Nav"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_show_bottom_nav"
            android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_tutorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show Tutorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_hide_bottom_nav" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_example_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example One"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_show_tutorial" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_example_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example Two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_example_one" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_example_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example Three"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_example_two" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>